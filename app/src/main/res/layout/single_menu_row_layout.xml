<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowItem_Object_infoLayout"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/rowItem_Object_imageView"
            android:src="@drawable/afeyalogo"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/rowItem_Object_textViewTitle"
            android:layout_weight="2"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/rowItem_Object_textViewPrice"
            android:layout_weight="1"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowItem_Object_BtnsLayout"
        android:layout_below="@+id/rowItem_Object_infoLayout"
        android:visibility="visible">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rowItem_Object_BtnDel"
            android:layout_weight="1"
            android:text="@string/del_object" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_object"
            android:id="@+id/rowItem_Object_BtnEdit"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
